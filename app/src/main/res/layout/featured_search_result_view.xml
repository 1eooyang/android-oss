<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/search_term_view"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingLeft="@dimen/feed_padding_x"
  android:paddingStart="@dimen/feed_padding_x"
  android:paddingEnd="@dimen/feed_padding_x"
  android:paddingRight="@dimen/feed_padding_x"
  android:paddingTop="@dimen/grid_5_half">

  <TextView
    style="@style/SubheadPrimary"
    android:id="@+id/search_term_text_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/dark_gray"
    tools:text="@string/search_most_popular" />

  <RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/project_image_view"
      android:scaleType="centerCrop"
      android:background="@drawable/gray_gradient"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:adjustViewBounds="true"
      android:layout_width="@dimen/search_result_photo_width"
      android:layout_height="@dimen/search_result_photo_height"
      tools:ignore="ContentDescription" />

    <LinearLayout
      android:orientation="vertical"
      android:layout_marginEnd="@dimen/grid_2"
      android:layout_below="@id/project_image_view"
      android:layout_marginStart="@dimen/grid_2"
      android:layout_toEndOf="@id/project_image_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        style="@style/SubheadSecondaryMedium"
        android:id="@+id/project_name_text_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_1_half"
        android:maxLines="3"
        tools:text="Name" />

      <TextView
        style="@style/CaptionSecondary"
        android:id="@+id/project_stats_text_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_1_half"
        android:maxLines="2"
        android:text="@string/search_by_creator" />
    </LinearLayout>

  </RelativeLayout>

  <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginTop="@dimen/grid_5_half"
    android:background="@color/black_alpha_10" />

</LinearLayout>
